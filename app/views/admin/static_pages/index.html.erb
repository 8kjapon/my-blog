<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h1>固定ページ一覧</h1>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th></th>
            <th>作成日時</th>
          </tr>
        </thead>
        <tbody>
          <% @static_pages.each do |static_page| %>
            <tr>
              <td><%= static_page.id %></td>
              <td><%= static_page.title %></td>
              <td>
                <%# link_to "閲覧", static_page_path(static_page) %>
                <%= link_to "編集", edit_admin_static_page_path(static_page) %>
                <%= link_to "削除", admin_static_page_path(static_page), data: { turbo_method: :delete, turbo_confirm: "記事を削除しますか？" } %>
              </td>
              <td><%= static_page.created_at.strftime('%Y年%m月%d日') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>