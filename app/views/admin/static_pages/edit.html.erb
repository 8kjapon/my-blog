<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h1>固定ページの編集</h1>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <%= form_with model: @static_page, url: admin_static_page_path(@static_page), local: true do |f| %>
        <div class="mb-4">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-4">
          <%= f.label :content, class: "form-label" %>
          <%= f.text_area :content, class: "tinymce", rows: 40 %>
        </div>
        <div>
          <%= f.submit "更新", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>