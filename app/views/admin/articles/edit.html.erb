<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h1>記事の編集</h1>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <%= form_with model: @article, url: admin_article_path(@article), local: true do |form| %>
        <div class="mb-4">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-4">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "tinymce", rows: 40 %>
        </div>
        <div>
          <%= form.submit "更新", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>