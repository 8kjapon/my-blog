<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h1>記事一覧</h1>
      </div>
    </div>
  </div>
</div>
<div class="app-content">
  <div class="container-fluid">
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th></th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.id %></td>
              <td><%= article.title %></td>
              <td>
                <%= link_to "閲覧", article_path(article) %>
                <%= link_to "編集", edit_admin_article_path(article) %>
                <%= link_to "削除", admin_article_path(article), data: { turbo_method: :delete, turbo_confirm: "記事を削除しますか？" } %>
              </td>
              <td><%= article.created_at.strftime('%Y年%m月%d日') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>