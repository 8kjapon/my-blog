<h1>新しい記事を作成</h1>
<%= tinymce convert_urls: true, uploadimage: true %>
<%= form_with model: @article, url: admin_articles_path, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, class: "tinymce", rows: 40 %>
  </div>
  <div>
    <%= form.submit "投稿" %>
  </div>
<% end %>